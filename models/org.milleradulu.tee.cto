/**
 * Write your model definitions here
 */

namespace org.milleradulu.tee

abstract concept UserName {
  o String firstName
  o String lastName
}

abstract concept Address {
  o String city
  o String county
  o String constituency
  o String street optional
}

participant TeaFarmer identified by email {
  o String email
  o UserName name
  o String phoneNumber
  o Double accountBalance default = 0.0
}

participant TeaFactory identified by email {
  o String email
  o String name
  o Address address
  o Double accountBalance default = 0.0
}

participant ShoppingCenter identified by email {
  o String email
  o String name
  o Address address
  o Double accountBalance default = 0.0
}

asset TeaLeavesShipment identified by shipmentId {
  o String shipmentId
  --> Contract contract
  o Long unitCount
}

asset Contract identified by contractId {
  o String contractId
  --> TeaFarmer farmer
  --> TeaFactory factory
  --> ShoppingCenter shoppingCenter
  o DateTime arrivalTime
  o Double unitPrice
}

transaction TeaLeavesShipmentReceived {
  --> TeaLeavesShipment shipment
}

transaction SetupDemo {
}